    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Docker Python",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/vivado_src"
                    }
                ]
            }
        },
        {
            "name": "Docker: Python - Top Level Run-PY",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/vivado_src"
                    }
                ],
                "projectType": "general",
                "port": 5678
            }
        },
        {
            "name": "GHDL Docker: Python",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "ghdl-docker",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/vivado_src"
                    }
                ],
                "projectType": "general",
                "port": 5678
            }
        }
    ]
}